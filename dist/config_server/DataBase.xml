<?xml version='1.0' encoding='utf-8'?>
<list>
	<!-- class of database driver (com.mysql.jdbc.Driver) -->
	<set name="DATA_BASE_DRIVER" value="com.mysql.jdbc.Driver" />
	<!-- address database (jdbc:mysql://localhost/stdb) -->
	<set name="DATA_BASE_URL" value="jdbc:mysql://localhost/terax1" />
	
	<!-- login to access the database (root) -->
	<set name="DATA_BASE_LOGIN" value="root" />
	<!-- password to access the database (000000) -->
	<set name="DATA_BASE_PASSWORD" value="password" />
	
	<!-- maximum number of connections to the database in the pool (10) -->
	<set name="DATA_BASE_MAX_CONNECTIONS" value="10" />
	<!-- the maximum number of create statements (1000) -->
	<set name="DATA_BASE_MAX_STATEMENTS" value="1000" />
	<!-- clean database at server startup (true) -->
	<set name="DATA_BASE_CLEANING_START" value="true" />
	<!-- Auto reconnect (defaut: false0-->
	<set name="DATA_BASE_AUTO_RECONNECT" value="true" />
</list>    
